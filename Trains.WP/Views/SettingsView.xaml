<views:MvxWindowsPage x:Class="Trains.WP.Views.SettingsView"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      xmlns:views="using:Cirrious.MvvmCross.WindowsCommon.Views"
                      xmlns:viewModels="using:Trains.Core.ViewModels"
                      xmlns:extensions="using:Trains.WP.Extensions"
                      mc:Ignorable="d"
                      d:DataContext="{d:DesignInstance viewModels:SettingsViewModel}">

    <Grid Margin="10,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0"
                   extensions:XamlElementExtensions.Resource="Settings"
                   FontSize="{StaticResource BigFontSize}"
                   Foreground="{ThemeResource PhoneForegroundBrush}"
                   HorizontalAlignment="Center" />
        <StackPanel Grid.Row="1">
            <ProgressBar Visibility="{Binding IsStationsDownloading, Converter={StaticResource BoolToVisibilityConverter}}"
                         IsIndeterminate="True"
                         VerticalAlignment="Top" />
            <StackPanel Visibility="{Binding IsAllCountriesDownloaded,Converter={StaticResource BoolToVisibilityConverter},ConverterParameter=invert}">
                <ComboBox extensions:XamlElementExtensions.Resource="SelectLanguage"
                          ItemsSource="{Binding Countries}"
                          SelectedValue="{Binding SelectedCountry,Mode=TwoWay}"
                          IsEnabled="{Binding IsStationsDownloading,Converter={StaticResource BooleanInverter}}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <Button extensions:XamlElementExtensions.Resource="DownloadSelectCountry"
                        HorizontalAlignment="Stretch"
                        Command="{Binding DownloadSelectedCountryStopPointsCommand}"
                        IsEnabled="{Binding IsStationsDownloading,Converter={StaticResource BooleanInverter}}" />
                <TimePicker extensions:XamlElementExtensions.Resource="TimeNotification"
                            Time="{Binding TimeOfNotify,Mode=TwoWay}" />
            </StackPanel>
            <Button extensions:XamlElementExtensions.Resource="ResetSettings"
                    HorizontalAlignment="Stretch"
                    Command="{Binding ResetSettingsCommand}"
                    IsEnabled="{Binding IsStationsDownloading,Converter={StaticResource BooleanInverter}}" />
            <TextBlock Text="{Binding NeedReboot}"
                       FontSize="15"
                       Margin="0,-10,0,0"
                       Foreground="{ThemeResource PhoneAccentBrush}" />
        </StackPanel>
    </Grid>
</views:MvxWindowsPage>