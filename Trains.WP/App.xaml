<Application x:Class="Trains.WP.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converter="using:Trains.WP.Converter"
             xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
             xmlns:core="using:Microsoft.Xaml.Interactions.Core">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Default">
                    <SolidColorBrush x:Key="PivotHeaderForegroundUnselectedBrush"
                                     Color="White" />
                    <SolidColorBrush x:Key="PivotHeaderForegroundSelectedBrush"
                                     Color="#FF00B5D0" />
                    <x:Double x:Key="PivotHeaderItemFontSize">33</x:Double>
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>

            <converter:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
            <converter:EnumToImagePathConverter x:Key="EnumToImageConverter" />
            <converter:BooleanToBackgroundConverter x:Key="BooleanToBackgroundConverter" />
            <converter:IsPlaceToVisibilityConverter x:Key="IsPlaceToVisibilityConverter" />
            <converter:IsPlaceToColorConverter x:Key="IsPlaceToColorConverter" />
            <converter:CarriageToImageConverter x:Key="CarriageToImageConverter" />
            <converter:AboutEnumToImageConverter x:Key="AboutEnumToImageConverter" />

            <x:Double x:Key="NormalFontSize">16</x:Double>
            <x:Double x:Key="NormalLargeFontSize">18</x:Double>
            <x:Double x:Key="NewInThisVersionFontSize">12</x:Double>
            <x:Double x:Key="SmallFontSize">14</x:Double>
            <x:Double x:Key="BigFontSize">25</x:Double>
            <x:Double x:Key="MediumFontSize">20</x:Double>
            <x:Double x:Key="MainFontSize">24</x:Double>
            <x:Double x:Key="HeaderFontSize">40</x:Double>
            <x:Double x:Key="TileWidth">70</x:Double>
            <x:String x:Key="DefaultFontFamily">Segoe WP</x:String>
            <SolidColorBrush x:Key="DarkRedColorBrush">DarkRed</SolidColorBrush>
            <SolidColorBrush x:Key="OrangeColorBrush">#FFFF5D00</SolidColorBrush>
            <SolidColorBrush x:Key="WhiteColorBrush">White</SolidColorBrush>
            <SolidColorBrush x:Key="WhiteSmokeColorBrush">WhiteSmoke</SolidColorBrush>
            <SolidColorBrush x:Key="DimGrayColorBrush">DimGray</SolidColorBrush>
            <SolidColorBrush x:Key="FontScheduleColorBrush">#FF969696</SolidColorBrush>
            <SolidColorBrush x:Key="GrayColorBrush">#FF171717</SolidColorBrush>
            <Color x:Key="BlackColorBrush">Black</Color>
            <Color x:Key="BoxBackgroundColor">#132037</Color>
            <Color x:Key="BoxForegroundColor">#d2ddf0</Color>
            <Color x:Key="TitleForegroundColor">#ffffff</Color>
            <SolidColorBrush x:Key="SplashScreenColor">#FF192856</SolidColorBrush>
            <SolidColorBrush x:Key="BackgroundColorBrush">#FF171717</SolidColorBrush>
            <FontFamily x:Key="ArialFontFamily">Arial</FontFamily>


            <Style x:Key="BasedHeaderTextBlockStyle"
                   TargetType="TextBlock">
                <Setter Property="FontSize"
                        Value="{StaticResource NormalLargeFontSize}" />
                <Setter Property="HorizontalAlignment"
                        Value="Center" />
                <Setter Property="Foreground"
                        Value="{StaticResource WhiteColorBrush}" />
            </Style>
            <Style x:Key="BasedTextBlockStyle"
                   TargetType="TextBlock">
                <Setter Property="FontSize"
                        Value="{StaticResource MediumFontSize}" />
                <Setter Property="VerticalAlignment"
                        Value="Center" />
                <Setter Property="TextWrapping"
                        Value="Wrap" />
            </Style>
            <Style x:Key="StopPointTextBlockStyle"
                   TargetType="TextBlock"
                   BasedOn="{StaticResource BasedTextBlockStyle}">
                <Setter Property="FontSize"
                        Value="{StaticResource SmallFontSize}" />
            </Style>

            <Style x:Key="SelectButtonStyle"
                   TargetType="Button">
                <Setter Property="Height"
                        Value="155" />
                <Setter Property="Width"
                        Value="155" />
                <Setter Property="Margin"
                        Value="10,0,50,0" />
            </Style>
            <Style x:Key="AutoSuggestBoxStyle"
                   TargetType="AutoSuggestBox">
                <Setter Property="IsSuggestionListOpen"
                        Value="True" />
                <Setter Property="Margin"
                        Value="0,5,0,0" />
            </Style>
            <Style x:Key="DatePickerStyle"
                   TargetType="DatePicker">
                <Setter Property="MonthFormat"
                        Value="{}{month.abbreviated}" />
                <Setter Property="YearFormat"
                        Value="{}{year.abbreviated}" />
                <Setter Property="DayFormat"
                        Value="{}{day.integer} {dayofweek.abbreviated}" />
            </Style>
            <Style x:Key="StackPanelStyle"
                   TargetType="StackPanel">
                <Setter Property="Orientation"
                        Value="Horizontal" />
                <Setter Property="Background"
                        Value="{StaticResource OrangeColorBrush}" />
            </Style>
            <Style x:Key="SearchBlockStyle"
                   TargetType="TextBlock">
                <Setter Property="VerticalAlignment"
                        Value="Center" />
                <Setter Property="Height"
                        Value="45" />
                <Setter Property="FontWeight"
                        Value="Bold" />
                <Setter Property="FontSize"
                        Value="{StaticResource BigFontSize}" />
                <Setter Property="Padding"
                        Value="50,0,0,0" />
            </Style>
            <Style TargetType="TextBlock"
                   x:Key="BaseTextStyle">
                <Setter Property="FontFamily"
                        Value="{StaticResource DefaultFontFamily}" />
                <Setter Property="TextWrapping"
                        Value="Wrap" />
                <Setter Property="TextTrimming"
                        Value="WordEllipsis" />
            </Style>
            <Style TargetType="TextBlock"
                   x:Key="TitleStyle"
                   BasedOn="{StaticResource BaseTextStyle}">
                <Setter Property="Foreground"
                        Value="{StaticResource TitleForegroundColor}" />
                <Setter Property="FontSize"
                        Value="{StaticResource BigFontSize}" />
                <Setter Property="FontWeight"
                        Value="Bold" />
            </Style>
            <Style TargetType="TextBlock"
                   x:Key="BoxTitleStyle"
                   BasedOn="{StaticResource TitleStyle}">
                <Setter Property="Foreground"
                        Value="{StaticResource BoxForegroundColor}" />
            </Style>
            <Style TargetType="TextBlock"
                   x:Key="HeaderTextBlockStyle">
                <Setter Property="FontSize"
                        Value="{StaticResource HeaderFontSize}" />
                <Setter Property="FontWeight"
                        Value="Medium" />
                <Setter Property="Margin"
                        Value="0,10,0,0" />
                <Setter Property="HorizontalAlignment"
                        Value="Center" />


            </Style>
            <Style x:Key="MainLabelTextBlockStyle"
                   TargetType="TextBlock">
                <Setter Property="TextWrapping"
                        Value="Wrap" />
                <!--<Setter Property="Width"
                        Value="180" />-->
                <Setter Property="HorizontalAlignment"
                        Value="Left" />
                <Setter Property="Margin"
                        Value="10,10,10,0" />
                <Setter Property="FontSize"
                        Value="{StaticResource MainFontSize}" />

            </Style>
            <Style x:Key="MainImageLabelTextBlockStyle"
                   TargetType="TextBlock"
                   BasedOn="{StaticResource BoxTitleStyle}">
                <Setter Property="Foreground"
                        Value="{StaticResource WhiteColorBrush}" />
                <Setter Property="Margin"
                        Value="5,0,0,0" />
            </Style>
            <Style x:Key="MainAboutTextBlockStyle"
                   TargetType="TextBlock">
                <Setter Property="FontSize"
                        Value="{StaticResource MainFontSize}" />
                <Setter Property="FontWeight"
                        Value="Bold" />
                <Setter Property="Margin"
                        Value="5,0,0,0" />
                <Setter Property="VerticalAlignment"
                        Value="Center" />
            </Style>
            <Style x:Key="MainLogoImageStyle"
                   TargetType="Image">
                <Setter Property="Source"
                        Value="/Assets/MenuIcon/logo_bch.png" />
                <Setter Property="Stretch"
                        Value="Fill" />
                <Setter Property="Width"
                        Value="142" />
                <Setter Property="HorizontalAlignment"
                        Value="Right" />
            </Style>
            <Style x:Key="MainButtonImageStyle"
                   TargetType="Image">
                <Setter Property="Margin"
                        Value="-100,0,0,0" />
                <Setter Property="RenderTransform">
                    <Setter.Value>
                        <CompositeTransform />
                    </Setter.Value>
                </Setter>
                <Setter Property="Height"
                        Value="150" />
                <Setter Property="Stretch"
                        Value="Fill" />
            </Style>
            <Style x:Key="GridLabelMainStyle"
                   TargetType="Grid">
                <Setter Property="Background">
                    <Setter.Value>
                        <SolidColorBrush Color="{StaticResource BlackColorBrush}"
                                         Opacity="0.6" />
                    </Setter.Value>
                </Setter>
                <Setter Property="Height"
                        Value="50" />
                <Setter Property="VerticalAlignment"
                        Value="Bottom" />
            </Style>
            <Style x:Key="AboutAppStyle"
                   TargetType="TextBlock">
                <Setter Property="FontSize"
                        Value="{StaticResource SmallFontSize}" />
                <Setter Property="Margin"
                        Value="0,10,0,0" />
                <Setter Property="TextWrapping"
                        Value="Wrap" />
                <Setter Property="Foreground"
                        Value="{StaticResource DimGrayColorBrush}" />
            </Style>
            <Style x:Key="ListViewItemStyle"
                   TargetType="ListViewItem">
                <Setter Property="HorizontalContentAlignment"
                        Value="Stretch" />
            </Style>

            <Style x:Key="AboutPageTextBlockStyle"
                   TargetType="TextBlock">
                <Setter Property="TextWrapping"
                        Value="Wrap" />
                <Setter Property="Foreground"
                        Value="#FF727272" />
                <Setter Property="FontSize"
                        Value="{StaticResource NewInThisVersionFontSize}" />

            </Style>


            <DataTemplate x:Key="ScheduleTemplate">
                <Grid Margin="0,0,0,10">
                    <!--<Grid Background="#FF00398B">
                        <TextBlock Text="{Binding BeforeDepartureTime}"
                                   Style="{StaticResource BasedTextBlockStyle}"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   TextWrapping="Wrap" />
                        <TextBlock Text="{Binding IsPlace}"
                                   Foreground="{StaticResource WhiteSmokeColorBrush}"
                                   Style="{StaticResource BasedTextBlockStyle}"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Right"
                                   Margin="0,0,5,0" />
                    </Grid>-->
                    <StackPanel Orientation="Horizontal">
                        <Border Width="10"
                                Background="{Binding Image,Converter={StaticResource EnumToImageConverter}}"
                                HorizontalAlignment="Left" />

                        <StackPanel Width="70">
                            <TextBlock Text="{Binding StartTime}"
                                       FontSize="{StaticResource BigFontSize}"
                                       HorizontalAlignment="Center" />
                            <TextBlock Text="{Binding EndTime}"
                                       FontSize="{StaticResource BigFontSize}"
                                       Foreground="{StaticResource DimGrayColorBrush}"
                                       HorizontalAlignment="Center" />
                        </StackPanel>

                        <StackPanel Margin="5,0,0,0">
                            <TextBlock Text="{Binding City}"
                                       Style="{StaticResource BasedHeaderTextBlockStyle}"
                                       TextWrapping="WrapWholeWords" />
                            <TextBlock Text="{Binding OnTheWay}"
                                       FontSize="{StaticResource NormalFontSize}"
                                       HorizontalAlignment="Left" />
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="{Binding IsPlace}"
                                           Foreground="{Binding IsPlace, Converter={StaticResource IsPlaceToColorConverter}}"
                                           HorizontalAlignment="Left"
                                           FontSize="{StaticResource NormalFontSize}" />
                                <StackPanel Orientation="Horizontal"
                                            Visibility="{Binding IsPlace,Converter={StaticResource IsPlaceToVisibilityConverter}}">
                                    <Border BorderBrush="DarkGray"
                                            BorderThickness="1"
                                            Margin="5,0,0,0"
                                            Padding="5,0"
                                            Background="{Binding InternetRegistration,Converter={StaticResource BooleanToBackgroundConverter}}">
                                        <TextBlock Text="ЭР"
                                                   HorizontalAlignment="Center"
                                                   FontSize="{StaticResource NormalFontSize}" />
                                    </Border>
                                    <Border BorderBrush="DarkGray"
                                            BorderThickness="1"
                                            Margin="10,0,0,0"
                                            Padding="5,0"
                                            Background="{Binding PlaceClasses.General,Converter={StaticResource BooleanToBackgroundConverter}}">
                                        <TextBlock Text="О"
                                                   HorizontalAlignment="Center"
                                                   FontSize="{StaticResource NormalFontSize}" />
                                    </Border>
                                    <Border BorderBrush="DarkGray"
                                            BorderThickness="1"
                                            Margin="10,0"
                                            Padding="5,0"
                                            Background="{Binding PlaceClasses.Sedentary,Converter={StaticResource BooleanToBackgroundConverter}}">
                                        <TextBlock Text="C"
                                                   HorizontalAlignment="Center"
                                                   FontSize="{StaticResource NormalFontSize}" />
                                    </Border>
                                    <Border BorderBrush="DarkGray"
                                            BorderThickness="1"
                                            Padding="5,0"
                                            Background="{Binding PlaceClasses.SecondClass,Converter={StaticResource BooleanToBackgroundConverter}}">
                                        <TextBlock Text="П"
                                                   HorizontalAlignment="Center"
                                                   FontSize="{StaticResource NormalFontSize}" />
                                    </Border>
                                    <Border BorderBrush="DarkGray"
                                            BorderThickness="1"
                                            Margin="10,0"
                                            Padding="5,0"
                                            Background="{Binding PlaceClasses.Coupe,Converter={StaticResource BooleanToBackgroundConverter}}">
                                        <TextBlock Text="К"
                                                   HorizontalAlignment="Center"
                                                   FontSize="{StaticResource NormalFontSize}" />
                                    </Border>
                                    <Border BorderBrush="DarkGray"
                                            BorderThickness="1"
                                            Padding="5,0"
                                            Background="{Binding PlaceClasses.Luxury,Converter={StaticResource BooleanToBackgroundConverter}}">
                                        <TextBlock Text="СВ"
                                                   HorizontalAlignment="Center"
                                                   FontSize="{StaticResource NormalFontSize}" />
                                    </Border>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </DataTemplate>
            <DataTemplate x:Key="HelpTemplate">
                <StackPanel Orientation="Horizontal">
                    <Image Source="{Binding ImagePath}"
                           Height="138"
                           Width="138"
                           Margin="5,5,5,0" />
                    <TextBlock Text="{Binding Description}"
                               TextWrapping="Wrap"
                               Margin="0,10,0,0"
                               MaxWidth="240" />
                </StackPanel>
            </DataTemplate>
            <DataTemplate x:Key="InformationTemplate">
                <Grid Background="{ThemeResource PhoneAccentBrush}"
                      Margin="0,5,0,0"
                      Height="{StaticResource TileWidth}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="{Binding Name}"
                               Grid.Column="0"
                               Style="{StaticResource BasedTextBlockStyle}"
                               Margin="5,0,0,0" />
                    <StackPanel Grid.Column="1"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center">
                        <TextBlock Text="{Binding Place}"
                                   Style="{StaticResource BasedTextBlockStyle}" />
                        <TextBlock Text="{Binding Price}"
                                   Style="{StaticResource BasedTextBlockStyle}" />
                    </StackPanel>
                </Grid>
            </DataTemplate>
            <DataTemplate x:Key="StopPointTemplate">
                <StackPanel Orientation="Horizontal"
                            MinWidth="600"
                            Background="{StaticResource OrangeColorBrush}"
                            Margin="0,2,0,0">
                    <StackPanel Orientation="Vertical"
                                Width="220"
                                Margin="5,0,0,0">
                        <TextBlock Text="{Binding Name}"
                                   MaxWidth="300"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Bottom"
                                   Style="{StaticResource BasedTextBlockStyle}" />
                    </StackPanel>
                    <StackPanel Orientation="Vertical"
                                MinWidth="150">
                        <TextBlock Text="{Binding Arrivals}"
                                   Style="{StaticResource StopPointTextBlockStyle}" />
                        <TextBlock Text="{Binding Stay}"
                                   Style="{StaticResource StopPointTextBlockStyle}" />
                        <TextBlock Text="{Binding Departures}"
                                   Style="{StaticResource StopPointTextBlockStyle}" />
                    </StackPanel>
                </StackPanel>
            </DataTemplate>
            <DataTemplate x:Key="LastRequestTemplate">
                <Grid Background="{ThemeResource PhoneAccentBrush}"
                      Margin="0,5,0,0"
                      Height="{StaticResource TileWidth}">
                    <StackPanel Orientation="Horizontal"
                                Margin="5,0,0,0"
                                VerticalAlignment="Center">
                        <TextBlock Text="{Binding From}"
                                   FontSize="{StaticResource MediumFontSize}" />
                        <TextBlock Text="-"
                                   Margin="10,0"
                                   FontSize="{StaticResource MediumFontSize}" />
                        <TextBlock Text="{Binding To}"
                                   FontSize="{StaticResource MediumFontSize}" />
                    </StackPanel>
                </Grid>
            </DataTemplate>
            <DataTemplate x:Key="ManageFavoriteRequestTemplate">
                <StackPanel Orientation="Horizontal"
                            Height="{StaticResource TileWidth}"
                            Background="{ThemeResource PhoneAccentBrush}"
                            Margin="5,0,5,5">
                    <TextBlock Text="{Binding From}"
                               Margin="5,0"
                               Style="{StaticResource BasedTextBlockStyle}" />
                    <TextBlock Text="-"
                               Margin="5,0"
                               Style="{StaticResource BasedTextBlockStyle}" />
                    <TextBlock Text="{Binding To}"
                               Style="{StaticResource BasedTextBlockStyle}" />
                </StackPanel>
            </DataTemplate>
            <DataTemplate x:Key="EditFavoriteRequestTemplate">

                <Grid Background="{ThemeResource PhoneAccentBrush}"
                      Margin="0,5,0,0"
                      Height="{StaticResource TileWidth}">
                    <StackPanel Orientation="Horizontal"
                                VerticalAlignment="Center">
                        <StackPanel Width="37"
                                    Visibility="{Binding IsCanBeDeleted,Converter={StaticResource BooleanToVisibilityConverter}}">
                            <CheckBox IsChecked="True"
                                      Margin="5,0" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding From}"
                                       Margin="5,0"
                                       Style="{StaticResource BasedTextBlockStyle}" />
                            <TextBlock Text="-"
                                       Margin="5,0"
                                       Style="{StaticResource BasedTextBlockStyle}" />
                            <TextBlock Text="{Binding To}"
                                       Style="{StaticResource BasedTextBlockStyle}" />
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </DataTemplate>
            <DataTemplate x:Key="AboutTemplate">
                <StackPanel Orientation="Horizontal"
                            Margin="0,0,0,5"
                            Background="{ThemeResource PhoneAccentBrush}">
                    <Image Width="{StaticResource TileWidth}"
                           Source="{Binding Item,Converter={StaticResource AboutEnumToImageConverter}}" />
                    <Border Background="{StaticResource BackgroundColorBrush}"
                            Width="5"
                            Height="{StaticResource TileWidth}" />
                    <TextBlock Text="{Binding Text}"
                               Style="{StaticResource MainAboutTextBlockStyle}" />
                </StackPanel>
            </DataTemplate>

            <DataTemplate x:Key="LastScheduleTemplate">
                <Grid HorizontalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0"
                               Text="{Binding LastRoute}"
                               FontSize="{StaticResource MediumFontSize}"
                               Style="{StaticResource BasedTextBlockStyle}" />
                    <ListView Grid.Row="1"
                              ItemsSource="{Binding Trains}"
                              SelectedItem="{Binding SelectedTrain,Mode=TwoWay}"
                              ItemTemplate="{StaticResource ScheduleTemplate}"
                              HorizontalContentAlignment="Center">
                        <interactivity:Interaction.Behaviors>
                            <core:EventTriggerBehavior EventName="Tapped">
                                <core:InvokeCommandAction Command="{Binding ClickItemCommand}" />
                            </core:EventTriggerBehavior>
                        </interactivity:Interaction.Behaviors>
                    </ListView>
                </Grid>
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>