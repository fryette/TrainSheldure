<Page x:Class="Trains.App.Views.AboutView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="{StaticResource BackgroundColorBrush}">

    <Grid>
        <Pivot Title="Чыгунка">
            <PivotItem x:Uid="AboutUs">
                <Grid>
                    <StackPanel Margin="10,10,0,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Uid="Author"
                                       Style="{StaticResource AboutAppStyle}"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource WhiteColorBrush}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Uid="Version"
                                       FontSize="{StaticResource SmallFontSize}"
                                       FontWeight="Bold" />
                        </StackPanel>
                        <TextBlock x:Uid="Copyright"
                                   Style="{StaticResource AboutAppStyle}" />
                        <TextBlock x:Uid="UsingLibrary"
                                   Style="{StaticResource AboutAppStyle}" />
                        <TextBlock Text="Caliburn.Micro, JSON.Net, AppPromo, BehaviorsSDK(XAML)"
                                   Style="{StaticResource AboutAppStyle}" />
                    </StackPanel>
                </Grid>
            </PivotItem>
            <PivotItem x:Uid="Changes">
                <StackPanel>
                    <TextBlock x:Uid="CurrentChanges"
                               Style="{StaticResource BasedTextBlockStyle}" />
                    <TextBlock Text="- Исправлен баг с неправильным отображением поездов при поиске 'На все дни'"
                               Style="{StaticResource AboutPageTextBlockStyle}" />
                    <TextBlock Text="- Исправлено неправильно отображение кнопок в главном меню"
                               Style="{StaticResource AboutPageTextBlockStyle}" />
                    <TextBlock Text="- Исправлен стартовый экран"
                               Style="{StaticResource AboutPageTextBlockStyle}" />
                    <TextBlock Text="- Редизайн расписания"
                               Style="{StaticResource AboutPageTextBlockStyle}" />
                    <TextBlock Text="- Теперь вместо '0 ч 20 мин' будет отображаться '20 мин'"
                               Style="{StaticResource AboutPageTextBlockStyle}" />
                    <TextBlock Text="- Заменены некоторые подсказки"
                               Style="{StaticResource AboutPageTextBlockStyle}" />
                    <TextBlock Text="- Оптимизация кода"
                               Style="{StaticResource AboutPageTextBlockStyle}" />
                </StackPanel>
            </PivotItem>
        </Pivot>
    </Grid>
</Page>
