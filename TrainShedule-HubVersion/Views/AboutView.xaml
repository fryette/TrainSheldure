<Page x:Class="Trains.App.Views.AboutView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Pivot Title="Чыгунка">
            <PivotItem Header="о нас">
                <Grid Background="#FF171717">
                    <StackPanel Margin="10,10,0,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Приложение создано:"
                                       FontSize="14"
                                       FontWeight="Bold" />
                            <TextBlock Text=" Sampir Yauhen"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       TextWrapping="WrapWholeWords" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Версия:"
                                       FontSize="14"
                                       FontWeight="Bold" />
                            <TextBlock Text=" 1.2.0"
                                       FontSize="16"
                                       FontWeight="Bold" />
                        </StackPanel>
                        <TextBlock Text="Логотипы являются собственностью создателя."
                                   FontSize="14"
                                   Margin="0,20,0,0"
                                   Foreground="#FF727272"
                                   TextWrapping="Wrap" />
                        <TextBlock Text="Используемые бибилиотеки:"
                                   Margin="0,20,0,0"
                                   FontSize="14"
                                   Foreground="#FF727272" />
                        <TextBlock Text="Caliburn.Micro, JSON.Net"
                                   FontSize="14"
                                   Margin="0,10,0,0"
                                   Foreground="#FF727272" />
                    </StackPanel>
                </Grid>
            </PivotItem>
            <PivotItem Header="Изменения">
                //TODO
            </PivotItem>
        </Pivot>
    </Grid>
</Page>
